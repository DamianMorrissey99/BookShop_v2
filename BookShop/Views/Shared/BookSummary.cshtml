@Model Book


    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@Model.ImageThumbnailUrl" alt="" />
            <div class="caption">
                <h3 class="pull-right">@Model.Price.ToString("c")</h3>
                <h3>
                    <a asp-controller="Drink" asp-action="Details" asp-route-drinkId="@Model.BookId">@Model.Title</a>
                </h3>
                <p>@Model.Title</p>
            </div>
            <div class="addToCart text-right">
                <p class="button ">
                    <a class="btn btn-success" id="cartButton" asp-controller="StoreCart" asp-action="AddToStoreCart" asp-route-drinkId="@Model.DrinkId">
                        Add to cart
                    </a>
                </p>
            </div>
        </div>
    </div>
